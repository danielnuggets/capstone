<h1>Best Places for You</h1>
<p>Your selected occupation: <%= @job.title %></p>

<h3><%= link_to "Compare these cities", "/compare?jbc1=#{@recommendations[0].id}&jbc2=#{@recommendations[1].id}&jbc3=#{@recommendations[2].id}&jbc4=#{@recommendations[3].id}&jbc5=#{@recommendations[4].id}" %></h3>

<!-- WHAT IF THERE ARE LESS THAN 5 RECOMMENDATIONS? -->


  <div id="posts">
    <div class="container">
      <div class="row">
        <div class="col-md-9">

          <div class="post">
            <div class="title">
              <h4 id="dantitle">Your Results</h4>
            </div>
          </div>


          <% i = 1 %>
          <% @cities.each do |city| %>

            <div class="post">
              <div class="title">
                <a href="/places/<%= city.id %>?job_id=<%= @job.id %>">#<%= i %>: <%= city.name %></a>
              </div>

              <a href="blogpost.html" class="pic">
                <img src="/assets/blogpost3.png" class="img-responsive" alt="blogpost" />
              </a>

              <div class="author">
                Benjamin Andrews, August 16, 2013
              </div>

              <p class="intro">
                <p>State: <%= city.state %></p>
                <p>Salary: <%= JobByCity.find_by(city_id: city.id, job_id: @job.id).median_salary %></p>
                <p>Cost of Living per Month: <%= city.cost_of_living_monthly %></p>
                <p>Current Weather: <%= city.current_weather %></p>
                <p>Walk Score: <%= city.walk_score %></p>
              </p>

              <a href="blogpost.html" class="continue-reading">Continue reading this post</a>

            </div>
            <% i = i + 1 %>
          <% end %>

          <div class="pages">
            <ul class="pagination">
                <li><a href="#">&laquo;</a></li>
                <li class="active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">&raquo;</a></li>
            </ul>
          </div>
        </div>

        <div class="col-md-3 sidebar">
          <div class="search">
            <form>
              <span class="icomoon-search"></span>
              <input type="text" name="q" placeholder="Search on blog..." />
            </form>
          </div>
          <div class="updates">
            <strong>
              Free blog updates
              <i class="fa fa-rss"></i>
            </strong>
            <p>
              Never miss an update. 
              Sign up  to receieve an email whenever we post something in the blog.
            </p>
          </div>
          <div class="follow-tw">
            <img src="/assets/twitterfollow.png" alt="follow-tw" />
          </div>
          <div class="best-hits">
            <strong>Check out our best hits:</strong>
            <a href="#">How to start a business</a>
