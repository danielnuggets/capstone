                  <%= result.city.cost_of_living_monthly %>
                </div>
              <% end %>

              <a href="signup.html" class="button button-small">Sign up free</a>
            </div>
            <div class="plan-col col-sm-2">
              <div class="header">
                Current Weather
                <div class="price">
                  Current Time
                </div>
              </div>
              <% @results.each do |result| %>
                <div class="spec">
                  <%= result.city.current_weather %>
                </div>
              <% end %>

              <a href="signup.html" class="button button-small">Sign up free</a>
            </div>
            <div class="plan-col last col-sm-2">
              <div class="header">
                Walk Score
                <div class="price">
                  asdf
                </div>
              </div>
              <% @results.each do |result| %>
                <div class="spec">
                  <%= result.city.walk_score %>
                </div>
              <% end %>

              <a href="signup.html" class="button button-small">Sign up free</a>
            </div>
          </div>
