      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="chart clearfix">
            <div class="features-col col-sm-4">
              <div class="header">                
                Location
              </div>
              <% @results.each do |result| %>
                <div class="spec">
                  <span class="icon brankic-calendar2"></span>
                  <%= result.city.name + ", " + result.city.state%>
                </div>
              <% end %>
            </div>
            <div class="plan-col col-sm-2">
