  <div id="hero">
    <div class="container dan">
      <div class="row" style="overflow:hidden;">
        <div class="col-md-5 image">
          <img src=<%= @city.image %> class="img-responsive animated fadeInUp img-circle" alt="services1" height="375" width="500" >
        </div>
        <div class="col-md-7 info">
          <h3><%= @city.name + ", " + @city.state %></h3>
          <% if @weather == "N/A" %>

          <% else %>
            <h4>Current Weather:</h4>
            <p>
            Temperature: <%= @weather["temp_f"] %> F</br>
            <%= @weather["weather"] %></br>
            Humidity: <%= @weather["relative_humidity"] %>
            <img src=<%= @weather["icon_url"] %>>
            </p>
          <% end %>
          <p>
            Occupation: <%= @job.title %>
            <br />
            Average Salary Across US: <%= number_to_currency(@job.national_median_salary, precision: 0) %>
          </p>
        </div>
      </div>
      <div class="row danstats">
        <div class="col-sm-3">
          Salary
          <strong><%= number_to_currency(JobByCity.find_by(city_id: @city.id, job_id: @job.id).median_salary, precision: 0) %></strong>
        </div>
        <div class="col-sm-3">
          Monthly Expenses
          <strong><%= number_to_currency(@city.cost_of_living_monthly, precision: 0) %></strong>
        </div>
        <div class="col-sm-3">
          Population
          <strong><%= number_with_delimiter(@city.population, delimiter: ',') %></strong>
        </div>
        <div class="col-sm-3">
          Walk Score*
          <strong><%= @city.walk_score %></strong>
        </div>
      </div>
    </div>
  </div>




